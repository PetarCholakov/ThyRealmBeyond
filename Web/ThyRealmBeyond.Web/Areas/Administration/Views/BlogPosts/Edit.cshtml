@model ThyRealmBeyond.Web.ViewModels.Administration.BlogPosts.BlogPostEditInputModel

@{
    ViewData["Title"] = "Edit Blog Post";
}

<script src="~/lib/tinymce/tinymce.min.js" type="text/javascript" asp-append-version="true"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        relative_urls: false,
        remove_script_host : false,
        convert_urls : true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PreviewContent" class="col-form-label"></label>
        <input asp-for="PreviewContent" class="form-control" />
        <span asp-validation-for="PreviewContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="col-form-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@{
    this.ViewData["Title"] = "Admin dashboard";
}

<h1>@this.ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Blog Posts</h5>
                <p class="card-text">Create, edit or delete Blog posts.</p>
                <a asp-controller="BlogPosts" asp-action="Index" class="btn btn-primary">Browse Blog Posts</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Personal Information</h5>
                <p class="card-text">Create or Edit your personal page.</p>
                <a asp-controller="PersonalInfo" asp-action="Index" class="btn btn-primary">See Personal Info</a>
            </div>
        </div>
    </div>
</div>
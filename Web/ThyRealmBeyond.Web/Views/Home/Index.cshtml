@using ThyRealmBeyond.Common
@model ThyRealmBeyond.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Добре дошли! На оня свят...";
}
<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>


@foreach (var blogPost in Model.BlogPosts)
{
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" />
    <div class="container">
        <div class="well">
            <div class="media">
                <a class="pull-left" href="@blogPost.Url">
                    <img class="media-object" src="https://i.pinimg.com/originals/25/b8/88/25b88870762f1d06c8e169f095f636a8.png">
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><a href="@blogPost.Url">@blogPost.Title</a></h4>
                    <p>
                        @blogPost.Content
                    </p>
                    <p class="text-right">Emil Christoff</p>
                    <ul class="list-inline list-unstyled">
                        <li><span><i class="glyphicon glyphicon-calendar"></i> @blogPost.CreatedOn </span></li>
                        <li>|</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

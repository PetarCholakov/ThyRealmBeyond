@using ThyRealmBeyond.Common
@model ThyRealmBeyond.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Добре дошли! На оня свят...";
    this.ViewData["SubTitle"] = "Ролева игра от Емил Христов";
    this.ViewData["Image"] = "Home.jpg";
}

@foreach (var blogPost in Model.BlogPosts)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <a href="@blogPost.Url">
                        <img src="@blogPost.ImageUrl" class="img-fluid" alt="" />
                        <h2 class="post-title">
                            @blogPost.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @Html.Raw(blogPost.SanitizedPreviewContent)
                        </h3>
                    </a>
                    <ul class="list-inline list-unstyled">
                        <li><span><i class="fa fa-calendar-alt"></i> @blogPost.CreatedOn </span></li>
                    </ul>
                    <p class="post-meta"><i class="fas fa-feather-alt"></i>Posted by @GlobalConstants.BlogPostAuthor</p>
                    <p><a class="btn btn-primary" href="@blogPost.Url"><i class="fa fa-plus"></i> Read More</a></p>
                </div>
                <hr>
            </div>
        </div>
    </div>
}
<div class="clearfix">
    @if (Model.PagesCount > 1 && this.Model.CurrentPage != this.Model.PagesCount)
    {

        <a class="btn btn-primary float-right" asp-action="Index"
           asp-route-page="@(this.Model.CurrentPage + 1)">
            Older Posts &rarr;
        </a>

    }
    @if (Model.CurrentPage != 1)
    {

        <a class="btn btn-primary float-left" asp-action="Index"
           asp-route-page="@(this.Model.CurrentPage - 1)">
            &larr; Previous Posts
        </a>
    }
</div>
